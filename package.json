{
  "name": "synticks-chart",
  "version": "1.0.0",
  "description": "A real-time candlestick charting engine for Vue 3 and vanilla JavaScript/TypeScript",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./vue": {
      "types": "./dist/vue/vue-entry.d.ts",
      "import": "./dist/vue/vue.es.js",
      "require": "./dist/vue/vue.cjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build:core": "tsup",
    "build:vue": "vite build -c vite.vue.config.ts && npx vue-tsc src/vue-entry.ts --declaration --emitDeclarationOnly --outDir dist/vue --skipLibCheck",
    "build": "npm run build:core && npm run build:vue",
    "test": "vitest run",
    "lint": "eslint src --ext .ts,.tsx,.vue",
    "dev": "vite dev --config demo/vite.config.ts",
    "playground": "npm --prefix playground run dev"
  },
  "keywords": [
    "chart",
    "candlestick",
    "ohlcv",
    "trading",
    "vue",
    "typescript",
    "synticks"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ondrahracek/synticks-chart.git"
  },
  "author": "Ondřej Hráček <ondra.hracek@seznam.cz>",
  "bugs": {
    "url": "https://github.com/ondrahracek/synticks-chart/issues"
  },
  "homepage": "https://github.com/ondrahracek/synticks-chart#readme",
  "devDependencies": {
    "@types/node": "^22.x",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/ui": "^1.6.1",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.x",
    "jsdom": "^27.2.0",
    "tsup": "^8.x",
    "typescript": "^5.9.3",
    "unplugin-vue": "^7.1.0",
    "vite": "^7.2.7",
    "vitest": "^1.6.1",
    "vue": "^3.5.25",
    "vue-tsc": "^3.1.7"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  }
}
